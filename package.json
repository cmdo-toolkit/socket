{
  "name": "cmdo-socket",
  "version": "3.0.0-rc4",
  "description": "Simple WebSocket solution built on ws.",
  "repository": "https://github.com/cmdo/toolkit.git",
  "author": "Christoffer RÃ¸dvik <christoffer@kodemon.net>",
  "license": "MIT",
  "keywords": [
    "server",
    "socket",
    "ws"
  ],
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "cmdo": {
    "type": "module"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig-cjs.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "scripts": {
    "prepublishOnly": "npm run lint && npm run build",

    "clean": "rm -rf ./cjs ./esm ./types",

    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "./node_modules/.bin/tsc --project tsconfig.json && ./node_modules/.bin/cmdo output esm -f esm",
    "build:cjs": "./node_modules/.bin/tsc --project tsconfig-cjs.json",

    "lint": "./node_modules/.bin/eslint 'src/**/*.ts'",
    "test": "./node_modules/.bin/jest --runInBand --verbose"
  },
  "dependencies": {
    "ioredis": "^4.28.2",
    "ws": "8.3.0"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.5",
    "@types/jest": "27.0.3",
    "@types/node": "17.0.0",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "cmdo-cli": "0.2.5",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  }
}
